<div class="mt-4">
    <h3>Đăng khóa học</h3>
    <form class="row" method="post" action="/courses/store">
        <div class="form-group">
            <label for="name" class="form-label">Tên khóa học</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group mt-4">
            <label for="videoId" class="form-label">Video ID</label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>
        <div class="form-group mt-4">
            <label for="slug" class="form-label">Đường dẫn khóa học</label>
            <input type="text" class="form-control" id="slug" name="slug">
        </div>
        <div class="form-group mt-4">
            <label for="image" class="form-label">Đường dẫn ảnh</label>
            <input type="text" class="form-control" id="image" name="image">
        </div>
        <div class="form-group mt-4">
            <label for="description" class="form-label">Mô tả</label>
            <textarea type="text" class="form-control" id="description" name="description"></textarea>
        </div>
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Thêm khóa học</button>
        </div>
    </form>
</div>