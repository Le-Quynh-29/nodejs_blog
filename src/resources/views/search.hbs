<div class="form-search mt-4">
    <form method="POST">
        <div class="form-group mb-3">
            <label for="search-input" class="col-sm-2 col-form-label">Nhập từ khóa</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="q" id="search-input" placeholder="Nhập từ khóa...">
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="gender-input" class="col-sm-2 col-form-label">Chọn giới tính</label>
            <div class="col-sm-10">
                <select class="form-control" name="gender" id="gender-input">
                    <option value="">--Chọn giới tính--</option>
                    <option value="male">Nam</option>
                    <option value="femail">Nữ</option>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </form>
</div>